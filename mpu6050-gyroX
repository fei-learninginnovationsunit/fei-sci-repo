#include <Wire.h>
#include <MPU6050_tockn.h>

MPU6050 mpu;

void setup() {
  Serial.begin(9600);
  Wire.begin();
  
  if (!mpu.begin()) {
    Serial.println("Failed to initialize MPU6050!");
    while (1);
  }

  mpu.setFullScaleGyroRange(250); // Set gyroscope range to Â±250 degrees per second
  mpu.setRate(4); // Set sample rate to 200Hz / (1 + 4) = 40Hz
  mpu.setDLPFMode(3); // Set DLPF to 42Hz bandwidth
}

void loop() {
  // Read raw gyro data
  mpu.update();
  mpu.readGyro();

  // Convert raw gyro X data to degrees per second
  float gyroX = mpu.getGyroX();

  // Print the gyro X value in degrees
  Serial.println("GyroX: " + String(gyroX, 2));

  delay(100);
}
